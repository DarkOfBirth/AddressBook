            android:textSize="21sp"/>

        <TextView
            android:id="@+id/tv_msg_notify_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jkljkl"
            android:textColor="#000000"
            android:textSize="18sp"/>
